{% extends "layout.html.twig" %}

{% block header %}
    {% include "partials/_header.html.twig" %}
{% endblock %}

{% block main %}
    <main class="container py-5">
        <h1>Détails dépense</h1>
        <div class="card mt-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{ depense.montant }}</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">{{ depense.date }}</h6>
                <p class="card-text">{{ depense.motif }}</p>
                <p class="card-text">{{ depense.categorie.nom }}</p>
                <a href="index.php?route=updateDepense&id={{ depense.id }}" class="card-link">Modifier</a>
                <a href="index.php?route=deleteDepense&id={{ depense.id }}" class="card-link">Supprimer</a>
            </div>
        </div>
    </main>
{% endblock %}