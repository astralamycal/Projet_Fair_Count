{% extends "layout.html.twig" %}

{% block header %}
    {% include "partials/_header.html.twig" %}
{% endblock %}

{% block main %}
    <main class="container py-5">
        <h1>Détails de la Dépense</h1>
        <div class="card mt-3" style="width: 18rem;">
            <div class="card-body">
                
                <h5 class="card-title">{{ depense.montant }} €</h5>
                
                <h6 class="card-subtitle mb-2 text-muted">Date : {{ depense.date | date("d/m/Y H:i") }}</h6>
                
                <hr>
                
                <p class="card-text"><strong>Motif :</strong> {{ depense.motif }}</p>
                
                <p class="card-text">
                    <strong>Auteur :</strong> {{ depense.auteur.username }}
                </p>
                
                <p class="card-text"><strong>Catégorie :</strong> {{ depense.categorie.nom }}</p>

                <hr>
                
                <a href="index.php?route=updateDepense&id={{ depense.id }}" class="card-link">Modifier</a>
                <a href="index.php?route=deleteDepense&id={{ depense.id }}" class="card-link">Supprimer</a>
            </div>
        </div>
    </main>
{% endblock %}