{% extends "layout.html.twig" %}

{% block header %}
    {% include "partials/_header.html.twig" %}
{% endblock %}

{% block main %}
    <main class="container py-5">
        <h1>Détails du Remboursement</h1>
        <div class="card mt-3">
            <div class="card-body">
                
                <h5 class="card-title">{{ remboursement.montant }} €</h5>
                <h6 class="card-subtitle mb-2 text-muted">Motif : {{ remboursement.motif }}</h6>
                
                <hr>

                <p class="card-text">
                    <strong>Auteur : </strong> {{ remboursement.auteur.username }}
                </p>
                <p class="card-text">
                    <strong>Receveur : </strong>{{ remboursement.receveur.username }}
                </p>
                
                <a href="index.php?route=updateRemboursement&id={{ remboursement.id }}" class="card-link">Modifier</a>
                <a href="index.php?route=deleteRemboursement&id={{ remboursement.id }}" class="card-link">Supprimer</a>
            </div>
        </div>
    </main>
{% endblock %}